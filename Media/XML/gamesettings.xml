<?xml version="1.0"?>

<!-- Game settings -->

<settings>
  <game name="Top Down Tiled Game Prototype With Death" />
  <renderer width="1024" height="768"/>
   
  <font file="Media\Fonts\AverageSans_24.spritefont"/>

  <!-- sprites -->
  
  <sprites path="Media\Images">

	
