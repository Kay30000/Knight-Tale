<?xml version="1.0"?>

<!-- Game settings -->

<!--  Game settings  -->
<settings>
	<game name="Blank 2D Game"/>
	<renderer width="1024" height="768"/>
	<font file="Media\Fonts\AverageSans_24.spritefont"/>
	<!--  sprites  -->
	<sprites path="Media\Images">
		<sprite name="background" file="background.png"/>
		<sprite name="textwheel" file="textwheel.png"/>
		<!-- stand -->
		<sprite name="standleft" file="standleft.png"/>
		<sprite name="standright" file="standright.png"/>
		<sprite name="standup" file="standup.png"/>
		<sprite name="standdown" file="standdown.png"/>
		
		<!-- walk -->
		<!-- right&left -->
		<sprite name="walkrightsheet" file="walkright.png"/>
		<sprite name="walkright" sheet="walkrightsheet" frames="8">
			<frame index="0" left="0"   top="0" right="100"  bottom="100"/>
			<frame index="1" left="100" top="0" right="200"  bottom="100"/>
			<frame index="2" left="200" top="0" right="300"  bottom="80"/>
			<frame index="3" left="300" top="0" right="400"  bottom="100"/>
			<frame index="4" left="400" top="0" right="500"  bottom="100"/>
			<frame index="5" left="500" top="0" right="600"  bottom="100"/>
			<frame index="6" left="600" top="0" right="700"  bottom="100"/>
			<frame index="7" left="700" top="0" right="800"  bottom="100"/>
		</sprite>

		<sprite name="walkleftsheet" file="walkleft.png"/>
		<sprite name="walkleft" sheet="walkleftsheet" frames="8">
			<frame index="7" left="0"   top="0" right="100"  bottom="100"/>
			<frame index="6" left="100" top="0" right="200"  bottom="100"/>
			<frame index="5" left="200" top="0" right="300"  bottom="100"/>
			<frame index="4" left="300" top="0" right="400"  bottom="100"/>
			<frame index="3" left="400" top="0" right="500"  bottom="100"/>
			<frame index="2" left="500" top="0" right="600"  bottom="100"/>
			<frame index="1" left="600" top="0" right="700"  bottom="100"/>
			<frame index="0" left="700" top="0" right="800"  bottom="100"/>
		</sprite>

		<!-- up&down -->
		<sprite name="walkupsheet" file="walkup.png"/>
		<sprite name="walkup" sheet="walkupsheet" frames="8">
			<frame index="0" left="0" top="0" right="100" bottom="100"/>
			<frame index="1" left="100" top="0" right="200" bottom="100"/>
			<frame index="2" left="200" top="0" right="300" bottom="100"/>
			<frame index="3" left="300" top="0" right="400" bottom="100"/>
			<frame index="4" left="400" top="0" right="500" bottom="100"/>
			<frame index="5" left="500" top="0" right="600" bottom="100"/>
			<frame index="6" left="600" top="0" right="700" bottom="100"/>
			<frame index="7" left="700" top="0" right="800" bottom="100"/>
		</sprite>

		<sprite name="walkdownsheet" file="walkdown.png"/>
		<sprite name="walkdown" sheet="walkdownsheet" frames="8">
			<frame index="0" left="0" top="0" right="100" bottom="100"/>
			<frame index="1" left="100" top="0" right="200" bottom="100"/>
			<frame index="2" left="200" top="0" right="300" bottom="100"/>
			<frame index="3" left="300" top="0" right="400" bottom="100"/>
			<frame index="4" left="400" top="0" right="500" bottom="100"/>
			<frame index="5" left="500" top="0" right="600" bottom="100"/>
			<frame index="6" left="600" top="0" right="700" bottom="100"/>
			<frame index="7" left="700" top="0" right="800" bottom="100"/>
		</sprite>





	</sprites>

	<!-- sound -->

	<sounds  path="Media\Sounds">
		<sound name="start" file="start.wav" instances="1"/>
		<sound name="gun" file="44magnum.wav" instances="8"/>
		<sound name="ricochet" file="ricochet.wav" instances="8"/>
		<sound name="clang" file="clang.wav" instances="4"/>
		<sound name="grunt" file="umph.wav" instances="2"/>
		<sound name="boom" file="boom.wav" instances="4"/>
	</sounds>
</settings>
